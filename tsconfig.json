{
  "compilerOptions": {
    "target": "esnext",                   // Especifica o alvo JavaScript (esnext usa a última versão do JS)
    "lib": ["dom", "dom.iterable", "esnext"], // Define as bibliotecas padrão (DOM e última versão do ES)
    "allowJs": true,                      // Permite arquivos .js no projeto
    "skipLibCheck": true,                 // Ignora checagem de tipos de arquivos de declaração
    "esModuleInterop": true,              // Permite importação de módulos CommonJS
    "allowSyntheticDefaultImports": true, // Permite importações padrão em módulos sem exportações padrão
    "strict": true,                       // Ativa todas as checagens estritas
    "forceConsistentCasingInFileNames": true, // Garante diferenciação de maiúsculas e minúsculas em nomes de arquivos
    "moduleResolution": "node",           // Resolve módulos no estilo Node.js
    "resolveJsonModule": true,            // Permite a importação de arquivos JSON
    "isolatedModules": true,              // Transforma cada arquivo como um módulo independente
    "noEmit": true,                       // Impede a geração de arquivos .js na saída
    "jsx": "react-jsx", 
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": ["src"],                     // Inclui apenas a pasta 'src' no projeto
  "exclude": ["node_modules", "dist"],    // Exclui a pasta 'node_modules' e 'dist' do projeto
}
